@model CreateSocialMediaDto
@{
    ViewData["Title"] = "CreateFeature";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<form method="post" asp-controller="SocialMedia" asp-action="CreateSocialMedia">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yeni Sosyal Medya Girişi</div>
					</div>
					<div class="card-body">
						<div class="form-group">
							<label asp-for="Title">Başlık</label>
							<input asp-for="Title" class="form-control" id="text" placeholder="Enter name">
							</div>
							<div class="form-group">
								<label asp-for="Url">Url</label>
								<input asp-for="Url" class="form-control" id="text" placeholder="Enter name">
							</div>
							<div class="form-group">
								<label asp-for="Icon">İkon</label>
								<input type="file" asp-for="Icon" class="form-control">
							</div>
					</div>
					<div class="card-action">
						<button class="btn btn-primary">Sosyal Medya Ekle</button>
					</div>
				</div>
				</form>
			</div>
		
		</div>
	</div>
</div>

