@model List<ResultMenuTableDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Kategori Adı</th>
                                <th scope="col">Durum</th>
                                <th scope="col">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td>@item.Status</td>
                                    <td>
                                        <a asp-controller="MenuTable" asp-action="DeleteMenuTable" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a>
                                        <a asp-controller="MenuTable" asp-action="UpdateMenuTable" asp-route-id="@item.Id" class="btn btn-outline-success">Güncelle</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a asp-controller="MenuTable" asp-action="CreateMenuTable" class="btn btn-outline-primary">Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>

