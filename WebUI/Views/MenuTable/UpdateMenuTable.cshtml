@model UpdateMenuTableDto
@{
    ViewData["Title"] = "UpdateMenuTable";
    Layout = "~/Views/Admin/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<form method="post" asp-controller="MenuTable" asp-action="UpdateMenuTable">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Masa Güncelle</div>
						</div>
						<div class="card-body">
							<input type="hidden" asp-for="Id" />
							<div class="form-group">
								<label asp-for="Name">Masa Adı</label>
								<input asp-for="Name" class="form-control" id="text" placeholder="Enter name">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Menu Güncelle</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>

