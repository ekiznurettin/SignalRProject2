@model CreateMenuTableDto
@{
    ViewData["Title"] = "CreateMenuTable";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<form method="post" asp-controller="MenuTable" asp-action="CreateMenuTable">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Masa Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label asp-for="Name">Masa Adı</label>
								<input asp-for="Name" class="form-control" id="text" placeholder="Enter name">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Masa Ekle</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>


