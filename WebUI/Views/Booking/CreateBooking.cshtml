@model CreateBookingDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<form method="post" asp-controller="Booking" asp-action="CreateBooking">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yeni Rezervasyon Girişi</div>
					</div>
					<div class="card-body">
						<div class="form-group">
							<label asp-for="Name">Rezervasyon Adı</label>
							<input asp-for="Name" class="form-control" id="text" placeholder="Enter name">
							</div>
							<div class="form-group">
								<label asp-for="Phone">Telefon</label>
								<input asp-for="Phone" class="form-control" id="text" placeholder="Enter name">
							</div>
							<div class="form-group">
								<label asp-for="Mail">Mail Adresi</label>
								<input asp-for="Mail" class="form-control" id="text" placeholder="Enter name">
							</div>
							<div class="form-group">
								<label asp-for="PersonCount">Personel Sayısı</label>
								<input asp-for="PersonCount" class="form-control" id="text" placeholder="Enter name">
							</div>
							<div class="form-group">
								<label asp-for="Date">Rezervasyon Adı</label>
								<input asp-for="Date" class="form-control" id="text" placeholder="Enter name">
							</div>
					</div>
					<div class="card-action">
						<button class="btn btn-primary">Kategori Ekle</button>
					</div>
				</div>
				</form>
			</div>		
		</div>
	</div>
</div>

