@model List<ResultDiscountDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}
<div class="content">
    <div class="container-fluid">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Başlık</th>
                                <th scope="col">İndirim Oranı</th>
                                <th scope="col">Durum</th>
                                <th scope="col">Açıklama</th>
                                <th scope="col">Resim</th>
                                <th scope="col">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Title</td>
                                    <td>@item.Amount</td>
                                    <td>@item.Status</td>
                                    <td>@item.Description</td>
                                    <td>@item.ImageUrl</td>
                                    <td>
                                        <a asp-controller="Discount" asp-action="DeleteDiscount" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a>
                                        <a asp-controller="Discount" asp-action="UpdateDiscount" asp-route-id="@item.Id" class="btn btn-outline-success">Güncelle</a>
                                        <a asp-controller="Discount" asp-action="ChangeStatusToTrue" asp-route-id="@item.Id" class="btn btn-outline-success">Aktif</a>
                                        <a asp-controller="Discount" asp-action="ChangeStatusToFalse" asp-route-id="@item.Id" class="btn btn-outline-success">Pasif</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a asp-controller="Discount" asp-action="CreateDiscount" class="btn btn-outline-primary">Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>

