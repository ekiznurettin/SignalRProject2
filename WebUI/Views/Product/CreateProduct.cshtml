@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-controller="Product" asp-action="CreateProduct">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Ürün Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Name">Ürün Adı</label>
                                <input asp-for="Name" class="form-control">
                            </div>
                            <div class="form-group">
                                <label asp-for="Price">Fiyat</label>
                                <input asp-for="Price" class="form-control">
                            </div>
                            <div class="form-group">
                                <label asp-for="ImageUrl">Resim</label>
                                <input type="file" asp-for="ImageUrl" class="form-control">
                            </div>
                            <div class="form-group">
                                <label asp-for="CategoryId">Kategori</label>
                                @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.Categories,new{@class="form-control"})
                            </div>
                            <div class="form-group">
                                <label asp-for="Description">Açıklama</label>
                                <input asp-for="Description" class="form-control">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Ürün Ekle</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>



