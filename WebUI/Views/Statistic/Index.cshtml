        <script type="text/javascript">
            $(document).ready(() => {

                var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7039/signalrhub").build();
                $("#connstatus").text(connection.state);

                connection.start().then(() => {
                    $("#connstatus").text(connection.state);
                    setInterval(() => {
                        connection.invoke("SendStatistic");
                    }, 1000);                    
                }).catch((err) => {
                    console.log(err)
                });


                connection.on("ReceiveCategoryCount", (value) => {
                    $("#categoryCount").text(value)
                });
                connection.on("ReceiveProductCount", (value) => {
                    $("#productCount").text(value)
                });
                connection.on("ReceiveActiveCategoryCount", (value) => {
                    $("#activeCategoryCount").text(value)
                });
                connection.on("ReceivePassiveCategoryCount", (value) => {
                    $("#passiveCategorycount").text(value)
                });

                connection.on("ReceiveProductPriceByElektronik", (value) => {
                    $("#productPriceByElektronik").text(value)
                });
                connection.on("ReceiveProductCountByElektronik", (value) => {
                    $("#productCountByElektronik").text(value)
                });
                connection.on("ReceiveProductCountByGiyim", (value) => {
                    $("#productCountByGiyim").text(value)
                });
             
            })
        </script>
