@model UpdateContactDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<form method="post" asp-controller="Contact" asp-action="CreateContact">
					<div class="card">
						<div class="card-header">
							<div class="card-title">İletişim Güncelle</div>
						</div>
						<div class="card-body">
							<input type="hidden" asp-for="Id" />
							<div class="form-group">
								<label asp-for="Location">Lokasyon</label>
								<input asp-for="Location" class="form-control" id="text" placeholder="Enter name">
							</div>
							<div class="form-group">
								<label asp-for="PhoneNumber">Telefon</label>
								<input asp-for="PhoneNumber" class="form-control" id="text" placeholder="Enter name">
							</div>
							<div class="form-group">
								<label asp-for="Mail">Mail Adresi</label>
								<input asp-for="Mail" class="form-control" id="text" placeholder="Enter name">
							</div>
							<div class="form-group">
								<label asp-for="FooterDescription">Açıklama</label>
								<input asp-for="FooterDescription" class="form-control" id="text" placeholder="Enter name">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">İletişim Güncelle</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>


