@model UpdateTestimonialDto
@{
	ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<form method="post" asp-controller="Testimonial" asp-action="UpdateTestimonial">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Refenas Güncelle</div>
						</div>
						<div class="card-body">
							<input type="hidden" asp-for="Id" />
							<div class="form-group">
								<label asp-for="Name">Referans Adı</label>
								<input asp-for="Name" class="form-control" id="text" placeholder="Enter name">
							</div>
							<div class="form-group">
								<label asp-for="Title">Başlık</label>
								<input asp-for="Title" class="form-control" id="text" placeholder="Enter name">
							</div>
							<div class="form-group">
								<label asp-for="Comment">Açıklama</label>
								<input asp-for="Comment" class="form-control" id="text" placeholder="Enter name">
							</div>
							<div class="form-group">
								<label asp-for="ImageUrl">İkon</label>
								<input type="file" asp-for="ImageUrl" class="form-control">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Referans Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>


