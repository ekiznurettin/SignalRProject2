@model CreateAboutDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-controller="About" asp-action="CreateAbout">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Hakkımızda Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Title">Başlık</label>
                                <input asp-for="Title" class="form-control">
                            </div>
                            <div class="form-group">
                                <label asp-for="Description">Başlık</label>
                                <input asp-for="Description" class="form-control">
                            </div>
                            <div class="form-group">
                                <label asp-for="ImageUrl">Resim</label>
                                <input type="file" asp-for="ImageUrl" class="form-control">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Hakkımızda Ekle</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

